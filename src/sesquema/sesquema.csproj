   </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\sesquema.protocol\sesquema.protocol.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Views\MainView.axaml.cs">
      <DependentUpon>MainView.axaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
